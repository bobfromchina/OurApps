<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="#E50150"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_view_default_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:padding="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_view_default_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/icon_back_bule"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:text="返回" />

    <TextView
        android:id="@+id/tv_view_default_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:text="@string/app_name"
        android:textColor="?attr/colorAccent"
        android:textSize="17sp" />

    <View
        android:id="@+id/view_view_default_title_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_gravity="bottom"
        android:background="@color/divider_color" />

</merge>