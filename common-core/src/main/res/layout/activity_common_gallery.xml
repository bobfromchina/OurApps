<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_common_gallery"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/fl_activity_common_gallery_title_bar"
        layout="@layout/view_common_gallery_title_bar" />

    <TextView
        android:id="@+id/tv_activity_common_gallery_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/half_alpha_black"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxHeight="100dp"
        android:visibility="gone"
        android:maxLines="3"
        android:padding="10dp"
        android:text="@string/default_img_tip"
        android:textColor="@color/white"
        android:textSize="13sp" />
</FrameLayout>