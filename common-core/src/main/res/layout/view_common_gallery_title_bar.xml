<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="top"
    android:background="@color/gallery_title_bar_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_common_gallery_title_bar_back"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:drawableLeft="@drawable/icon_back_white"
        android:drawableStart="@drawable/icon_back_white"
        android:drawablePadding="5dp"
        android:padding="10dp"
        android:text="@string/back"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/view_common_gallery_title_bar_title"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/icon_save"
        android:id="@+id/view_common_gallery_title_bar_save"
        android:layout_gravity="end|center_vertical" />
</FrameLayout>