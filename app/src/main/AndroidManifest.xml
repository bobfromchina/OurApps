            android:name=".activity.WebViewActivity"
            android:label="网页加载"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegisterOrForgotPwdAct"
            android:label="注册"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.SetAct"
            android:label="设置"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ModifyPwdAct"
            android:label="修改密码"
